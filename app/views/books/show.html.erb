

<h3>User info</h3>
  <h3>name<%=@book.user.name%></h3>
  <h3>introduction<%=@user.introduction%></h3>
  <%= image_tag @user.get_profile_image(100,100) %>


<h2>New Book</h2>
<%=form_with model: @newbook do |f| %>

<div class="form_group">
  <label for="book_title">Title</label>
  <%=f.text_field:title%><br/>
</div>

<div class="form_group">
  <label for="book_opinion">Opinion</label>
  <%=f.text_area:body%><br/>
</div>



<div class="form_group">
  <%=f.submit'CreateBook'%>
</div>

<%end%>






<h2>Book datail</h2>
<table class="table">
 <tbody>
     <tr>
         <td> <%=link_to image_tag(@book.user.get_profile_image(100,100)),user_path(@book.user) %></td>
         <td><%=link_to @book.user.name,user_path(@book.user)%></td>
         <td><%=link_to @book.title,book_path(@book)%></td>
         <td><%=@book.body%></td>
         <td><%link_to"Edit",edit_book_path(@book)%></td>
         <% if @book.user==current_user%>
          <td><%=link_to"Edit",edit_book_path(@book)%></td>
         <td><%=link_to"destroy",book_path(@book),method: :delete%></td>
         </td>
         <%end%>
     </tr>
 </tbody>
 </table>

