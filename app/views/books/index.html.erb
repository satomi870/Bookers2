<% if @book.errors.any?%>
<%=@book.errors.count%>error
<ul>
  <%@book.errors.full_messages.each do |message| %>
  <Li><%=message%></Li>
  <%end%>
</ul>
<%end%>

<h1>indexページ</h1>

<h3>User info</h3>
  <h3>name<%=@users.name%></h3>
  <h3>introduction<%=@users.introduction%></h3>
  <%= image_tag @users.get_profile_image(100,100) %>
  
  <%=link_to"edit",edit_user_path(@users)%>



<h2>New Book</h2>
<%=form_with model: @book do |f| %>

<div class="form_group">
  <label for="book_title">Title</label>
  <%=f.text_field:title%><br/>
</div>

<div class="form_group">
  <label for="book_opinion">Opinion</label>
  <%=f.text_area:body%><br/>
</div>



<div class="form_group">
  <%=f.submit'CreateBook'%>
</div>

<%end%>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspa="3"></th>
    </tr>
  </thead>
  <%@books.each do |book|%>
  <tbody>
    <tr>
      <td><%=link_to image_tag(book.user.get_profile_image(100,100)),user_path(book.user) %></td>
      <td><%=link_to book.title,book_path(book)%></td>
      <td><%=book.body%></td>
  
    </tr>
  </tbody>
  <%end%>
</table>




