<% if @book.errors.any?%>
<%=@book.errors.count%>error
<ul>
  <%@book.errors.full_messages.each do |message| %>
  <Li><%=message%></Li>
  <%end%>
</ul>
<%end%>

<%=render 'list', users: @users, book: @book%>









<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspa="3"></th>
    </tr>
  </thead>
  <%@books.each do |book|%>
  <tbody>
    <tr>
      <td><%=link_to image_tag(book.user.get_profile_image(100,100)),user_path(book.user) %></td>
      <td><%=link_to book.title,book_path(book)%></td>
      <td><%=book.body%></td>
  
    </tr>
  </tbody>
  <%end%>
</table>




