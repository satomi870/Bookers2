
 <script src="https://kit.fontawesome.com/801a1ac1e5.js" crossorigin="anonymous"></script>
<h3>User info</h3>
<%= image_tag users.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
     <th>name</th> 
     <th><%=users.name%></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%=users.introduction%></th>
    </tr>
  </tbody>
  </table> 
 
  <%=link_to edit_user_path(users),class:"btn btn-outline-secondary btn-block" do%>
  <i class="fas fa-user-cog"></i>
  <% end %>
  

<h2 class="mt-3">New book</h2>
<%=form_with model: book do |f| %>

<div class="form-group">
  <label for="book_title">Title</label>
  <%=f.text_field:title,class:"form-control"%><br/>
</div>

<div class="form-group">
  <label for="book_opinion">Opinion</label>
  <%=f.text_area:body,class:"form-control"%><br/>
</div>



<div class="form-group">
  <%=f.submit'CreateBook',class:"btn btn-success"%>
</div>

<%end%>
